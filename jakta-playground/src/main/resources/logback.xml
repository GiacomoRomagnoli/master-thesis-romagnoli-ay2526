<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      /*%d{yyyy-MM-dd HH:mm:ss.SSS} %logger{40}.%M\(%class{0}.java:%line\) - %msg%throwable%n*/
      <pattern>
        %highlight(%level) %yellow(%logger{36}) - %msg %kvp%n
      </pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
  <logger name="org.eclipse.jetty" level="WARN"/>
  <logger name="io.netty" level="WARN"/>
</configuration>